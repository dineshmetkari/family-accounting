<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/ViewBottomMargin"
    android:paddingLeft="@dimen/ViewLeftMargin"
    android:paddingRight="@dimen/ViewRightMargin"
    android:paddingTop="@dimen/ViewTopMargin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray" >

            <TextView
                android:id="@+id/equityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text="@string/main_equity_label"
                android:textAppearance="@style/TextAppearance.Large" />

            <TextView
                android:id="@+id/equityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/text_view_light_gray"
                android:clickable="true"
                android:gravity="right"
                android:longClickable="false"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:textAppearance="@style/TextAppearance.Large"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/DividerLeftMargin"
            android:layout_marginRight="@dimen/DividerRightMargin"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:weightSum="1" >

            <TextView
                android:id="@+id/assertLabel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                android:longClickable="true"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text="@string/main_assert_label"
                android:textAppearance="@style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/assertValue"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/text_view_light_gray"
                android:clickable="true"
                android:gravity="right"
                android:longClickable="false"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text=""
                android:textAppearance="@style/TextAppearance.Medium"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/DividerRightMargin"
                android:layout_marginTop="@dimen/DividerLeftMargin"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/liabilityLabel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@color/light_gray"
                android:clickable="true"
                android:longClickable="true"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text="@string/main_liability_label"
                android:textAppearance="@style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/liabilitytValue"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/text_view_light_gray"
                android:clickable="true"
                android:gravity="right"
                android:longClickable="false"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:textAppearance="@style/TextAppearance.Medium"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_horizontal_textfield"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/_3d_gray"
            android:weightSum="1" >

            <TextView
                android:id="@+id/monthLabel"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.75"
                android:background="@drawable/text_view_3d_gray"
                android:clickable="true"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text=""
                android:textAppearance="@style/TextAppearance.Large" />

            <TextView
                android:id="@+id/taskLabel"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:background="@drawable/text_view_3d_gray"
                android:clickable="true"
                android:gravity="top|right"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text=""
                android:textAppearance="@style/TextAppearance.Small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/_3d_gray"
            android:weightSum="1" >

            <TextView
                android:id="@+id/liquadityLabel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text="@string/main_liquidity_label"
                android:textAppearance="@style/TextAppearance.Small" />

            <TextView
                android:id="@+id/liquadityValue"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="right"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text=""
                android:textAppearance="@style/TextAppearance.Small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/_3d_gray"
            android:weightSum="1" >

            <TextView
                android:id="@+id/costLabel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text="@string/main_cur_cost_label"
                android:textAppearance="@style/TextAppearance.Small" />

            <TextView
                android:id="@+id/costValue"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="right"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text=""
                android:textAppearance="@style/TextAppearance.Small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/_3d_gray"
            android:weightSum="1" >

            <TextView
                android:id="@+id/revenueLabel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:text="@string/main_cur_revenue_label"
                android:textAppearance="@style/TextAppearance.Small" />

            <TextView
                android:id="@+id/revenueValue"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="right"
                android:paddingBottom="@dimen/TextBottomMargin"
                android:paddingLeft="@dimen/TextLeftMargin"
                android:paddingRight="@dimen/TextRightMargin"
                android:paddingTop="@dimen/TextTopMargin"
                android:textAppearance="@style/TextAppearance.Small" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>