<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="@drawable/list_blue_center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ListRightPadding"
    android:paddingRight="@dimen/ListLeftPadding" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <TextView
            android:id="@+id/balance_report_descp"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="@string/main_test_descp"
            android:textAppearance="@style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/balance_report_value"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:gravity="right"
            android:text="@string/main_test_amount_large"
            android:textAppearance="@style/TextAppearance.XLarge" />
    </LinearLayout>

    <TextView
        android:id="@+id/balance_report_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_test_amount"
        android:textAppearance="@style/TextAppearance.Small" />

</LinearLayout>